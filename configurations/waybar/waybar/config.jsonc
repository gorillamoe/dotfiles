    "pulseaudio",
    "custom/dnd",
    "sway/language",
    "cpu",
    "memory",
    "temperature",
    "keyboard-state",
    "clock",
    "battery",
    "tray"
  ],
  // Modules configuration
  "sway/workspaces": {
